<!doctype html>
<html lang="en">

{% assign title = 'Tinker' %}
{% include tinker_head %}

<body>
{%- include tinker_sidebar -%}

<div class="page">
    <div class="ui raised very padded text container segment">
        {%- for route in tinker.routes -%}
            <div class="ui segment">
                <div>{{route.display_name}}</div>
                {%- for function in route.functions -%}
                    {% if function.visible %}
                        <div>{{function.path}}</div>
                    {% endif %}
                {%- endfor -%}
            </div>
        {%- endfor -%}
    </div>
</div>

</body>

</html>