<div class="card box-shadow" hx-trigger="reload" hx-get="{{ Tinker.Url }}" hx-swap="outerHTML">
	{% assign card_name = Data.Name %}
	{% include tinker_card_header %}

	<div class="body outline">
		<table class="table">
			<tbody>
			{%- for item in Data.Items -%}
				<tr>
					<td>{{ item.Name }}</td>
					<td>{{ Item.Value }}</td>
				</tr>
			{%- endfor -%}
			</tbody>
		</table>
	</div>
</div>