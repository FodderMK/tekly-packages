<!doctype html>
<html lang="en">

{% assign title = 'Tinker' %}
{% include tinker_head %}

<body>
{%- include tinker_sidebar -%}
<div class="page ui basic">
    <div class="ui basic segment">
        <h3 class="ui header">Commands</h3>
        <div class="ui raised padded text container segment">
            {%- for route in routes -%}
                <div class="ui segment">
                    <div>{{route.display_name}}</div>
                    {% assign functions = route.functions | where: "visible" %}
                    {%- for function in functions -%}
                        <div>{{function.path}}</div>
                    {%- endfor -%}
                </div>
            {%- endfor -%}
        </div>
    </div>

</div>
</body>

</html>